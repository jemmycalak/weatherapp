<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_address_dashboard" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_address_dashboard</item>
    </style>

    <style name="text_date_dashboard" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_date_dashboard</item>
    </style>

    <style name="text_celciusbig_dashboard" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_reguler</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_celciusbig_dashboard</item>
    </style>

    <style name="text_hours_dashboard" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_celcius_hours</item>
    </style>

    <style name="text_celcius_hours_dashboard" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_reguler</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">@dimen/textsize_celcius_hours</item>
    </style>

    <style name="text_error_network" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textsize_error_network</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

</resources>
